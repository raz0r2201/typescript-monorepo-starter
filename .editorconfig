# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{js,ts}]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[*.md]
max_line_length = off

[package.json]
indent_style = space
indent_size = 2
