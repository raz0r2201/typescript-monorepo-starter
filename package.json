    "test": "jest",
    "coverage": "jest --coverage",
    "coverage:show": "live-server coverage",

    "lint": "eslint --ext .js --ext .ts --ext .md",
    "format": "yarn lint --fix",

    "scope": "lerna run --scope",
    "dev": "lerna run --parallel --stream dev",
    "prod": "lerna run --parallel --stream prod"
  },
  "devDependencies": {
    "@types/jest": "~26.0.4",
    "jest": "~26.1.0",
